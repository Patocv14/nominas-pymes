---
import Phone from "../components/icons/Phone.icon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contacto"
  description="Contáctanos para obtener asesoría experta en nómina, cálculo de impuestos y más. Estamos aquí para ayudarte a optimizar tu negocio con soluciones personalizadas"
>
  <div class="container mx-auto bg-white-bg rounded shadow-lg">
    <div class="absolute mt-14 ml-16 font-secondary">
      <a type="button" href="/"> Regresar </a>
    </div>
    <div class="my-32 pt-32">
      <h1
        class="md:text-6xl text-3xl text-center font-extrabold font-primary uppercase"
      >
        Nomina Pymes
      </h1>
      <hr class="border-2 border-gray lg:w-1/3 w-3/4 mx-auto" />
      <p class="text-secondary text-2xl text-center">Datos de contacto</p>
    </div>
    <div class="md:flex justify-center gap-72 pb-32">
      <div class="border-l-4 border-l-secondary lg:text-3xl text-2xl">
        <p class="pl-5 my-7">Nancy Garza</p>
        <p class="pl-5 mb-7">nominapymes@gmail.com</p>
        <p class="pl-5 mb-7">+52 811326-7251</p>
      </div>
      <div class="flex items-center md:mt-10 mt-0 justify-center">
        <Phone />
      </div>
    </div>
  </div>
</Layout>
